<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center"
            android:text="Please select payment method to proceed"
            android:textSize="14sp"
            android:textColor="@color/colorGreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/bt_online"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="30dp"
            android:text="ONLINE PAYMENT"
            android:background="@color/dgray"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/bt_bank"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:text="BANK"
            android:background="@color/dgray"
            android:layout_width="match_parent"
            android:layout_height="40dp" />





    </LinearLayout>

    <View
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="0.5dp">
    </View>
    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:text="Total:"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_alignParentRight="true"
        android:text="Total:"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>


        <TextView
            android:id="@+id/tv_amt"
            android:textSize="11sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:text="Enter amount to pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/rl_amt"
            android:background="@color/colorPink"
            android:layout_marginTop="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_amount"
                android:text="Amount: "
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_centerVertical="true"
                android:hint="Enter Here"
                android:background="@null"
                android:layout_toRightOf="@+id/tv_amount"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_pay"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="20dp"
            android:text="PAY"
            android:background="@color/colorGreen"
            android:layout_width="match_parent"
            android:layout_height="40dp" />



    </LinearLayout>
</LinearLayout>