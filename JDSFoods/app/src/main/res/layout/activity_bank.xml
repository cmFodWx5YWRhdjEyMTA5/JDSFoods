<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankActivity">

    <LinearLayout
        android:id="@+id/ll_toolbar"
        android:background="@color/colorGreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tv_head1"
        android:textSize="14sp"
        android:gravity="center"
        android:text="Current Amount"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/ll_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_head2"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Select Payment Method"
        android:textColor="@color/colorBlack"
        android:layout_below="@+id/tv_head1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_head3"
        android:textSize="12sp"
        android:gravity="center"
        android:text="Pay At"
        android:textColor="@color/colorGreen"
        android:layout_below="@+id/tv_head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="@android:drawable/dialog_holo_light_frame"
        android:layout_margin="10dp"
        android:padding="30dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_name1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Name:"
                android:textColor="@color/colorGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_name"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:text="Select Payment Method"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_no1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="IBAN Number:"
                android:textColor="@color/colorGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_no"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:text="Select Payment Method"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/tv_no1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/tv_swiss1"
                android:textSize="16sp"
                android:gravity="center"
                android:text="Swiss Code:"
                android:textColor="@color/colorGreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_swiss"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:text="Select Payment Method"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/tv_swiss1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>